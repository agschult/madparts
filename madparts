import sys, string

if __name__ == '__main__':
    if string.find(sys.platform, 'linux') == 0:
      sys.path.append('/usr/share/madparts')

    if len(sys.argv) == 1:
      import main.madparts
      main.madparts.gui_main()
    else:
      import main.cli
      sys.exit(main.cli.cli_main())
